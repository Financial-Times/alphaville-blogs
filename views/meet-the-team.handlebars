{{#contentFor "head"}}
    <link rel="stylesheet" href="{{assetsBasePath}}/build/meet-the-team.css" />
    <script>
        (function () {
            ctmLoadScript({
                src: "{{assetsBasePath}}/build/meetTheTeam.js",
                async: true
            });
        }());
    </script>
{{/contentFor}}

<div class="o-grid-container">
    <div class="o-grid-row">
        <div data-o-grid-colspan="L4">
            <h2 class="team-title">Meet the team</h2>
            <ul class="team">
                {{#team}}
                    <li class="team__member__item {{#if isSelected}}team__member__item--active{{/if}}">
                        <a href="/meet-the-team/{{slug}}" class="team__member">
                            <img class="team__member__thumb" src="{{main_image.url}}" />
                            <p class="team__member__name">{{title}}</p>
                        </a>
                    </li>
                {{/team}}
            </ul>
        </div>
        <div data-o-grid-colspan="L8">
            {{#selectedMember}}
                <div class="member-info">
                    <h2 class="member-info__name">{{data.title}}</h2>
                    <img class="member-info__pic" src="{{data.main_image.url}}" />
                </div>
                <ul data-o-component="o-tabs" class="o-tabs o-tabs--big o-tabs--buttontabs" role="tablist">
                    <li role="tab" aria-selected="true"><a href="#bio">Biography</a></li>
                    <li role="tab"><a href="#latestPosts">Latest posts</a></li>
                </ul>
                <div id="bio" class="o-tabs__tabpanel">
                    {{{data.content}}}
                </div>
                <div id="latestPosts" class="o-tabs__tabpanel">
                    <div class="alphaville-article-list">
                        {{#latestArticles}}
                            {{#isMarketsLive}}
                                {{> list-cards/card-marketslive}}
                            {{/isMarketsLive}}

                            {{^isMarketsLive}}
                                {{#withImage}}
                                    {{> list-cards/card-image}}
                                {{/withImage}}
                                {{^withImage}}
                                    {{> list-cards/card-generic}}
                                {{/withImage}}
                            {{/isMarketsLive}}
                        {{/latestArticles}}
                    </div>
                </div>
            {{/selectedMember}}
        </div>
    </div>
</div>
