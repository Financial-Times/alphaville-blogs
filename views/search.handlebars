{{#contentFor "head"}}
	<link rel="stylesheet" href="{{assetsBasePath}}/build/main.css" />
	<script>
		(function () {
			ctmLoadScript({
				src: "{{assetsBasePath}}/build/main.js",
				async: true
			});
		}());
	</script>
{{/contentFor}}

<div class="o-grid-container alphaville-article-list">
	<div class="o-grid-row">
		<div class="main" data-o-grid-colspan="L8">
			<div class="article-list">
				{{#if isSearch}}
					<h1 class="o-typography-heading1">Search results{{#if searchTerm}}: {{searchTerm}}{{/if}}</h1>
				{{else}}
					<h1 class="o-typography-heading1">{{searchTerm}}</h1>
				{{/if}}

				{{#if searchResults}}
					{{#each searchResults}}
						{{> list-cards/item withInlineRead=false}}
					{{/each}}
				{{else}}
					{{#if message}}
						<p>{{message}}</p>
					{{else}}
						<p>No search results were found.</p>
					{{/if}}
				{{/if}}
			</div>

			<div class="o-grid-row">
				<div data-o-grid-colspan="12">
					{{#pagination}}
						{{> pagination}}
					{{/pagination}}
				</div>
			</div>
		</div>
		<div data-o-grid-colspan="hide L4">
			{{> alphaville-ui/twitter-widget/main}}
			{{> alphaville-ui/ads/templates/dmpu_desktop}}
		</div>
	</div>
</div>
