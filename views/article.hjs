<!DOCTYPE html>
<html>

	<head>
		<title>{{ title }}</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

		<link rel="stylesheet" href="{{assetsBasePath}}/build/main.css" />

		<script src="https://cdn.polyfill.io/v2/polyfill.min.js"></script>

    <link href="https://build.origami.ft.com/v2/bundles/css?modules=o-comments@^2.5.0,o-comment-count@^0.1.1" rel="stylesheet" />
    <script src="https://build.origami.ft.com/v2/bundles/js?modules=o-comments@^2.5.0,o-comment-count@^0.1.1&amp;minify=none"></script>

	</head>

	<body class="enhanced">
		{{#headerConfig}}
			{{> header}}
		{{/headerConfig}}
    <div class="container primary-container" style="width: 973px">
      <div class="o-grid-container">
        <div class="o-grid-row">
          <div data-o-grid-colspan="8">

          {{#article}}
            <div id="post-{{id}}" class="post">
              <div class="post-header">
                <h2 class="post-title">{{title}}</h2>
                <div class="post-meta">
                  <strong class="byline"><a href="#">{{byline}}</a></strong>
                  <div class="o-author-alerts o-author-alerts--theme" data-o-component="o-author-alerts" data-o-author-alerts-article-id="{{_id}}"></div>
                  <span class="meta-divider"> | </span>
                  <time data-o-component="o-date" class="o-date" datetime="{{publishedDate}}">{{publishedDate}} </time>
                  <span class="meta-divider"> | </span>
                  {{#comments.enabled}}
                  <div class="comment-counter" data-o-component="o-comment-count" data-o-comment-count-config-article-id="{{id}}">Comments</div>
                  <span class="meta-divider"> | </span>
                  {{/comments.enabled}}
                </div>
              </div>
              <div class="post-content">
                  {{{bodyHTML}}}
              </div>
              {{#comments.enabled}}
              <div data-o-component="o-comments" data-o-comments-config-title="FT Alphaville2 Blogs Test" data-o-comments-config-url="http://ftalphaville2.ft.com/content/{{id}}" data-o-comments-config-articleId="{{id}}"></div>
              {{/comments.enabled}}
            </div>
          {{/article}}
          </div>
          <div data-o-grid-colspan="4">

          </div>

        </div>
      </div>
    </div>


  {{#isTest}}
    <script data-o-comments-config type="application/json">
      {
        "livefyre": {
          "network": "ft-1.fyre.co",
          "domain": "ft-1.auth.fyre.co"
        },
        "showEnvironment" : true
      }
    </script>

    <script data-o-comment-api-config type="application/json">
      {
        "suds": {
          "baseUrl": "http://test.session-user-data.webservices.ft.com"
        },
        "ccs": {
          "baseUrl": "http://test.comment-creation.webservices.ft.com"
        },
        "cacheConfig": {
          "authBaseName": "comments-test-auth-",
          "initBaseName": "comments-test-init-"
        }
      }
    </script>
  {{/isTest}}

  <script src="{{assetsBasePath}}/build/main.js"></script>
	</body>
</html>
