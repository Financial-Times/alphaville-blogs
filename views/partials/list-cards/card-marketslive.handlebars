<div class="alphaville-card-container">
	<div class="alphaville-card o-card o-card--landscape o-card--image- alphaville-card--marketslive" data-o-component="o-card">
		<div class="o-card__content">
			<div class="o-card__meta">
				<a href="/marketslive" class="o-card__tag {{#isLive}}alphaville-card__live-title{{/isLive}}">
					{{^isLive}}Markets Live{{/isLive}}
					{{#isLive}}
						<strong>Markets Live</strong>
						<span class="alphaville-card__live-notification-icon"></span>
					{{/isLive}}
				</a>
			</div>
			
			<h3 class="o-card__heading">
				<a href="{{_source.av2WebUrl}}">{{_source.title}}</a>
			</h3>

			<p class="o-card__standfirst">{{{_source.summaries}}}</p>

			<time data-o-component="o-date" class="o-date o-card__timestamp" datetime="{{_source.publishedDate}}">{{_source.publishedDate}}</time>
		</div>

	</div>
</div>
