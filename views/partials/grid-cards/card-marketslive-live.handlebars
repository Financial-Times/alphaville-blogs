<div class="alphaville-card-container" data-o-grid-colspan="12 S6 M4">
	<div class="alphaville-card alphaville-card--fill-space alphaville-card--marketslive-live o-card" data-o-component="o-card" data-article-id="{{_id}}">
		<div class="alphaville-card--marketslive-live--lozenge"></div>
		
		<div class="alphaville-card__content">
			<div class="alphaville-card__theme">
				<a href="/marketslive">
					<span class="alphaville-card__theme-part1">Markets</span>
					<span class="alphaville-card__theme-part2">Live</span>
					<span class="alphaville-card--marketslive-live-lozenge-icon"></span>
				</a>
			</div>

			<h2 class="alphaville-card__heading alphaville-card__heading-truncate">
				<a href="{{_source.av2WebUrl}}">{{{_source.title}}}</a>
			</h2>

			<p class="alphaville-card__standfirst alphaville-card__standfirst-truncate--3lines">
				{{{_source.summaries.[0]}}}
			</p>
		</div>
	</div>
</div>
