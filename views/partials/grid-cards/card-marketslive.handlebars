<div class="alphaville-card-container" data-o-grid-colspan="12 S6 M4" data-trackable="card">
	<div class="alphaville-card alphaville-card--grid alphaville-card--fill-space alphaville-card--marketslive {{#isLive}}alphaville-card--marketslive-live{{/isLive}}" data-article-id="{{id}}" data-trackable="marketslive{{#isLive}}:live{{/isLive}}">
		{{#isLive}}
			<div class="alphaville-card--marketslive-live--lozenge"></div>
		{{/isLive}}

		<div class="alphaville-card__content">
			<div class="alphaville-card__theme">
				<a href="/marketslive" data-trackable="link" data-trackable="theme">
					<span class="alphaville-card__theme-part1">Markets</span>
					<span class="alphaville-card__theme-part2">Live</span>
					{{#isLive}}
						<span class="alphaville-card--marketslive-lozenge-icon"></span>
					{{/isLive}}
				</a>
			</div>

			<h2 class="alphaville-card__heading alphaville-card__heading-truncate--3lines">
				<a href="{{av2WebUrl}}" data-trackable="headline">{{{title}}}</a>
			</h2>

			{{> grid-cards/elements/standfirst}}

			<div class="alphaville-card__footer">
                {{> comment-counter}}
				{{> timestamp}}
			</div>


		</div>
	</div>
</div>
