<div class="alphaville-card-container {{_source.cardType}}" data-o-grid-colspan="12 S6 M4 XL3">
	<div class="alphaville-card alphaville-card--author-lead alphaville-card--fill-space">
		<div class="alphaville-card__image">
			<img src="{{_source.headshot}}" />
		</div>
		<div class="alphaville-card__content">
			{{#_source.primaryTheme}}
			<div class="alphaville-card__byline">
				<a href="/search?q={{this}}" class="alphaville-card__tag">{{this}}</a>
			</div>
			{{/_source.primaryTheme}}

			<h2 class="alphaville-card__heading alphaville-card__heading-truncate">
				<a href="{{_webUrl}}">{{_source.title}}</a>
			</h2>

			{{>comment-counter}}
			<time data-o-component="o-date" class="o-date alphaville-card__timestamp" datetime="{{_source.publishedDate}}">{{_source.publishedDate}}</time>
		</div>
	</div>
</div>
