<div class="alphaville-card-container {{_source.cardType}}" data-o-grid-colspan="12 S12 M8">
	<div class="alphaville-card alphaville-card--fill-space alphaville-card--hero o-card" data-o-component="o-card">
		{{#if withImage}}
			<div class="o-grid-row">
				<div data-o-grid-colspan="8">
					<div class="alphaville-card__content">
						{{#if _source.authors}}
							<div class="o-card__meta">
								<a href="/author?q={{_source.authors.[0]}}" class="o-card__tag">{{_source.authors.[0]}}</a>
							</div>
						{{else}}
							{{#_source.primaryTheme}}
								<div class="o-card__meta">
									<a href="/search?q={{.}}" class="o-card__tag">{{.}}</a>
								</div>
							{{/_source.primaryTheme}}
						{{/if}}

						<h2 class="alphaville-card__heading alphaville-card__heading-truncate">
							<a href="{{_source.av2WebUrl}}">{{_source.title}}</a>
						</h2>

						<div class="alphaville-card__standfirst alphaville-card__standfirst-truncate">
							{{{_source.summaries.[0]}}}
						</div>
					</div>
				</div>
				<div data-o-grid-colspan="4">
					<img class="alphaville-card__image" src="{{_source.mainImage.url}}" alt="{{_source.mainImage.title}}">

					{{> comment-counter}}
					<time data-o-component="o-date" class="o-date alphaville-card__timestamp" datetime="{{_source.publishedDate}}">{{_source.publishedDate}}</time>
				</div>
			</div>
		{{else}}
			<div class="alphaville-card__content">
				{{#_source.primaryTheme}}
					<div class="alphaville-card__theme">
						<a href="/search?q={{this}}">{{this}}</a>
					</div>
				{{/_source.primaryTheme}}

				<h2 class="alphaville-card__heading alphaville-card__heading-truncate">
					<a href="{{_source.av2WebUrl}}">{{_source.title}}</a>
				</h2>

				<div class="alphaville-card__standfirst alphaville-card__standfirst-truncate">
					{{{_source.summaries.[0]}}}
				</div>

				{{> comment-counter}}
				<time data-o-component="o-date" class="o-date alphaville-card__timestamp" datetime="{{_source.publishedDate}}">{{_source.publishedDate}}</time>
			</div>
		{{/if}}
	</div>
</div>
