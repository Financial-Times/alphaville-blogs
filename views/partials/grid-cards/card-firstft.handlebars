<div class="alphaville-card-container" data-o-grid-colspan="12 S6 M4" data-trackable="card">
	<div class="alphaville-card alphaville-card--fill-space alphaville-card--firstft o-card" data-o-component="o-card" data-article-id="{{_id}}" data-trackable="firstft">
		<div class="alphaville-card__content">
			<div class="alphaville-card__meta">
				<a href="/search?q=FirstFT" class="alphaville-card__tag" data-trackable="theme">
					<span class="alphaville-card__tag-part1">First</span>
					<span class="alphaville-card__tag-part2">FT</span>
				</a>
			</div>

			{{> grid-cards/elements/heading}}

			<h3 class="alphaville-card__subheading">
				<a href="{{_source.av2WebUrl}}" data-trackable="sub-heading">Your essential daily briefing:</a>
			</h3>

			<p class="alphaville-card__standfirst alphaville-card__standfirst-truncate-2lines">
				{{{_source.summaries.[0]}}}
			</p>

			<div class="alphaville-card__footer">
				{{> comment-counter}}
				<time data-o-component="o-date" class="o-date alphaville-card__timestamp" datetime="{{_source.publishedDate}}">{{_source.publishedDate}}</time>
			</div>
		</div>
	</div>
</div>
