<div class="alphaville-card-container" data-o-grid-colspan="12 S6 M4 XL4">
	<div class="alphaville-card alphaville-card--fill-space alphaville-card--firstft o-card" data-o-component="o-card">		
		<div class="alphaville-card__content">
			<div class="alphaville-card__meta">
				<a href="/search?q=FirstFT" class="alphaville-card__tag">
					<span class="alphaville-card__tag-part1">First</span>
					<span class="alphaville-card__tag-part2">FT</span>
				</a>
			</div>

			<h2 class="alphaville-card__heading alphaville-card__heading-truncate">
				<a href="{{_source.av2WebUrl}}">{{_source.title}}</a>
			</h2>

			<p class="alphaville-card__standfirst alphaville-card__standfirst-truncate">{{{_source.summaries}}}</p>

			<ul class="alphaville-card__byline">
				{{#_source.authors}}
					<li><a href="/search?q={{this}}">{{{this}}}</a></li>
				{{/_source.authors}}
			</ul>

			{{>comment-counter}}
			<time data-o-component="o-date" class="o-date alphaville-card__timestamp" datetime="{{_source.publishedDate}}">{{_source.publishedDate}}</time>
		</div>
	</div>
</div>
