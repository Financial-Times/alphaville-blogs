<div class="alphaville-card-container" data-o-grid-colspan="12 S6 M4" data-trackable="card">
	<div class="alphaville-card alphaville-card--grid alphaville-card--fill-space alphaville-card--image-lead" data-article-id="{{id}}" data-card-type="imagelead" data-trackable="imagelead">
		<div class="alphaville-card__image-background">
			<div style="background-image: url({{image mainImage.url 380 'medium'}})"></div>
		</div>
		<div class="alphaville-card__content">
			{{> grid-cards/elements/primaryTheme}}

			{{> grid-cards/elements/heading}}

			<div class="alphaville-card__footer">
				{{!-- Comment count will be reintroduced once migration is complete --}}
				{{!-- {{> comment-counter}} --}}
				{{> timestamp}}
			</div>
		</div>
	</div>

	{{#if curation}}
		{{> curation}}
	{{/if}}
</div>
