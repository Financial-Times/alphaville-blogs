<div class="alphaville-card-container" data-o-grid-colspan="12 S6 M4" data-trackable="card-alphachat">
	<div class="alphaville-card alphaville-card--grid alphaville-card--fill-space alphaville-card--series alphaville-card--alphachat" data-o-component="o-card" data-article-id="{{id}}" data-card-type="blog" data-trackable="blog">
		<div class="alphaville-card__content">
			{{> grid-cards/elements/primaryTheme}}

			{{> grid-cards/elements/heading}}

			{{#if withImage}}
				<a href="{{av2WebUrl}}">
					<img class="alphaville-card__image" src="{{image mainImage.url 80 'medium'}}" alt="{{mainImage.title}}">
				</a>
			{{/if}}

			<div class="alphaville-card__footer">
				{{> comment-counter}}
				{{> timestamp}}
			</div>
		</div>
	</div>
</div>
