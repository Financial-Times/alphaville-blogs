<div class="alphaville-card-container" data-o-grid-colspan="12 S6 M4">
	<div class="alphaville-card alphaville-card--fill-space alphaville-card--opinion o-card" data-o-component="o-card" data-article-id="{{_id}}" data-card-type="opinion">
		<div class="alphaville-card__content">
			{{> grid-cards/elements/primaryTheme}}

			{{> grid-cards/elements/heading}}

			<div class="alphaville-card__footer">
				<div class="o-grid-row">
					<div data-o-grid-colspan="7 L8">
						{{> comment-counter}}
						<time data-o-component="o-date" class="o-date alphaville-card__timestamp" datetime="{{_source.publishedDate}}">{{_source.publishedDate}}</time>
					</div>
				</div>
			</div>

			{{#if _source.authors}}
				<div class="alphaville-card__headshot">
					<img src="{{_source.authors.[0].headshotUrl}}" />
				</div>
			{{/if}}
		</div>
	</div>

	{{#if curation}}
		{{> curation}}
	{{/if}}
</div>
