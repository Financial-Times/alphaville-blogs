<div class="alphaville-card-container {{_source.cardType}}" data-o-grid-colspan="12 S12 M8 XL8">
	<div class="alphaville-card alphaville-card--fill-space alphaville-card--hero" data-o-component="o-card">
		<div class="alphaville-card__content">
			<div class="alphaville-card__primary-theme">
				<a href="/search?q={{_source.primaryTheme}}" class="alphaville-card__tag">{{_source.primaryTheme}}</a>
			</div>

			<h2 class="alphaville-card__heading"><a href="{{_webUrl}}">{{_source.title}}</a></h2>

			<div class="o-grid-row">
				{{#_source.mainImage}}
				<div data-o-grid-colspan="4">
					<img class="alphaville-card__image" src="{{url}}" alt="{{title}}">
				</div>
				<div data-o-grid-colspan="8">
				{{/_source.mainImage}}
				{{^_source.mainImage}}
				<div data-o-grid-colspan="12">
				{{/_source.mainImage}}
					<div class="alphaville-card__byline">
						 <a href="#" class="alphaville-card__tag">{{_source.byline}}</a>
					</div>

					<div class="alphaville-card__standfirst">{{{_source.summaries}}}</div>

					{{>comment-counter}}
					<time data-o-component="o-date" class="o-date alphaville-card__timestamp" datetime="{{_source.publishedDate}}">{{_source.publishedDate}}</time>
				</div>
			</div>
		</div>
	</div>
</div>
