{{#contentFor "head"}}
    <link rel="stylesheet" href="{{assetsBasePath}}/build/article.css" />
    <script>
        (function () {
            ctmLoadScript({
                src: "{{assetsBasePath}}/build/article.js",
                async: true
            });
        }());
    </script>
{{/contentFor}}

<div class="article__wrapper">
    <div class="o-grid-container">
        <div class="article__main o-grid-row">
            <div data-o-grid-colspan="12 L8 XL7 XLoffset1">
                <div class="article__header">
                    <div class="article__header-inner">
                        <header class="article__header--wrapper ">
                            <div class="article__header-primary">
                                <h1 class="article__title">{{article.title}}</h1>
                            </div>
                        </header>
                    </div>
                </div>

                <div class="article__main">
                    {{> shareComponent position='top'}}

                    <article class="article__body n-content-body">
                        {{{article.body}}}

                        <div class="alphaville-in-article-ad">
                            {{> alphaville-ads/templates/mpu_mobile}}
                        </div>

                        <footer class="n-content-copyright">
                            <small>
                                <a href="http://www.ft.com/servicestools/help/copyright" data-trackable="link-copyright">Copyright</a> The Financial Times Limited 2016. All rights reserved. You may share using our article tools. Please don't cut articles from FT.com and redistribute by email or post to the web.
                            </small>
                        </footer>
                    </article>

                    {{> shareComponent position='bottom'}}
                    <div data-n-article-email-bottom-container=""></div>
                </div>
            </div>
            <div class="article__aside o-grid-remove-gutters--XL" data-o-grid-colspan="0 L4 XL3 XLoffset1">
                {{#with mostRecentPost }}
                    {{> alphaville-most-recent-post/main }}
                {{/with}}
                {{> alphaville-ads/templates/dmpu_desktop}}
                {{> twitterWidget}}
            </div>
        </div>
    </div>
</div>
</div>


{{> alphaville-comments-config/main }}
