<!DOCTYPE html>
<html>
	<head>
		<title>{{ title }}</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />

		<link rel="stylesheet" href="{{assetsBasePath}}/build/main.css" />

		<script src="https://cdn.polyfill.io/v2/polyfill.min.js"></script>

	</head>
	<body class="enhanced">
		{{#headerConfig}}
			{{> header}}
		{{/headerConfig}}
		<div class="o-grid-container">
			<div class="o-grid-row">
				<div class="main" data-o-grid-colspan="8">
				{{#searchResults}}
					<div id="post-{{_id}}" class="post">

						{{#_source}}
							{{> postHeader}}
						{{/_source}}

						<div class="post-content">
							{{#isMarketLive}}
								<div class="market-live-message">This Markets Live session is closed. <a href="{{_source.webUrl}}">Read more</a></div>
								<p>Live markets commentary from FT.com</p>
							{{/isMarketLive}}

							{{^isMarketLive}}
								{{{_source.openingHTML}}}
							{{/isMarketLive}}
						</div>

					</div>
				{{/searchResults}}
				</div>
				<div class="rail" data-o-grid-colspan="4">
					{{>twitterWidget}}
				</div>
			</div>
		</div>

		{{> commentsConfig}}

		<script src="{{assetsBasePath}}/build/main.js"></script>
		
		{{> footer}}
	</body>
</html>
