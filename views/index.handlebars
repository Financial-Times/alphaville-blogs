{{#contentFor "head"}}
<link rel="stylesheet" href="{{assetsBasePath}}/build/main.css" />
<script>
	(function () {
		ctmLoadScript({
			src: "{{assetsBasePath}}/build/main.js",
			async: true
		});
	}());
</script>
{{/contentFor}}

<div class="o-grid-container alphaville-article-grid">
	<div class="o-grid-row">
		{{#hero}}
			{{> grid-cards/card-hero}}
		{{/hero}}

		{{#searchResults}}

			{{#isBlog}}
				{{> grid-cards/card-blog}}
			{{/isBlog}}

			{{#isBriefing}}
				{{> grid-cards/card-briefing}}
			{{/isBriefing}}

			{{#isMarketsLive}}
				{{> grid-cards/card-marketslive}}
			{{/isMarketsLive}}

			{{#isPodcast}}
				{{> grid-cards/card-podcast}}
			{{/isPodcast}}

			{{#isAuthorLead}}
				{{> grid-cards/card-authorLead}}
			{{/isAuthorLead}}

			{{#isAuthorLeadWithImage}}
				{{> grid-cards/card-authorLeadWithImage}}
			{{/isAuthorLeadWithImage}}

			{{#isTopicLead}}
				{{> grid-cards/card-topicLead}}
			{{/isTopicLead}}

			{{#isStoryImage}}
				{{> grid-cards/card-storyImage}}
			{{/isStoryImage}}

			{{> adBetweenCards}}

		{{/searchResults}}
	</div>
</div>

{{> alphaville-comments-config/main }}
